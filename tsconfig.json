{
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "declaration": true,
    "newLine": "crlf",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
